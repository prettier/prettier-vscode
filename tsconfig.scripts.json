{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": ["esbuild.mjs", "scripts/*.mjs"]
}
