{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "outDir": "out",
    "strict": true,
    "noUnusedLocals": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "lib": ["ES2022"],
    "sourceMap": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["src/test/**/*.ts"]
}
