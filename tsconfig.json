{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "outDir": "out",
    "strict": true,
    "noUnusedLocals": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "lib": ["ES2022"],
    "sourceMap": true,
    "rootDir": "src",
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    ".vscode-test",
    "test-fixtures",
    "src/test/suite"
  ],
  "include": [
    "src/**/*.ts",
    "./node_modules/vscode/vscode.d.ts",
    "./node_modules/vscode/lib/*"
  ]
}
